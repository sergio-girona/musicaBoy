<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Playlist">

    <LinearLayout
        android:id="@+id/LinearTitol"
        android:layout_height="wrap_content"
        android:layout_width="365dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Playlist"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="start"
            android:layout_marginEnd="16dp"/>

        <ImageView
            android:rotation="280"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@drawable/busca"
            android:layout_gravity="end"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLlista"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@+id/LinearTitol"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/NewPlaylist"
            android:layout_marginTop="15dp"
            android:layout_width="365dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/CreateNew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/plus"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:layout_weight="1"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create A New Playlist"
                android:textSize="16sp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/BarraNavegacion"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/Home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/dashboard"
            android:layout_gravity="center"/>

        <Space
            android:layout_width="8dp"
            android:layout_height="0dp"/>

        <ImageView
            android:id="@+id/Playlist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/playlist"
            android:layout_gravity="center"/>

        <Space
            android:layout_width="8dp"
            android:layout_height="0dp"/>

        <ImageView
            android:id="@+id/Albums"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/albums"
            android:layout_gravity="center"/>

        <Space
            android:layout_width="8dp"
            android:layout_height="0dp"/>

        <ImageView
            android:id="@+id/CrearCanco"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/newsong"
            android:layout_gravity="center"/>

    </LinearLayout>

</RelativeLayout>