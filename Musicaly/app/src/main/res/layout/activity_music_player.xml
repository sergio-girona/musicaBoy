<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MusicPlayer">

    <LinearLayout
        android:id="@+id/PlayerHeader"
        android:layout_marginTop="30dp"
        android:layout_width="365dp"
        android:layout_centerHorizontal="true"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:gravity="center">

        <ImageView
            android:id="@+id/IconLeft"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/back"/>

        <!-- Texto en el centro -->
        <TextView
            android:id="@+id/PlayerTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Now Playing"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/IconRight"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/more"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="60dp"
        android:id="@+id/PlayerInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/PlayerHeader"
        android:gravity="center">

        <ImageView
            android:id="@+id/InfoImage"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/songcover"/>

        <TextView
            android:id="@+id/InfoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom de la canÃ§o"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/InfoSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom artista"
            android:textSize="16sp"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Seekbar"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/PlayerInfo"
        android:layout_width="350dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="25"/>

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/textViewRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5:00"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/Seekbar"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/shuffle"/>

        <View
            android:layout_width="8dp"
            android:layout_height="0dp"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/previous"/>

        <View
            android:layout_width="8dp"
            android:layout_height="0dp"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/play"/>

        <View
            android:layout_width="8dp"
            android:layout_height="0dp"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/previous"
            android:rotation="180"/>

        <View
            android:layout_width="8dp"
            android:layout_height="0dp"/>

        <ImageView
            android:id="@+id/playllist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/playllista"/>
    </LinearLayout>


</RelativeLayout>